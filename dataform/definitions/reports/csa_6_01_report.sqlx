config {
  type: "view",
  tags: ["report"],
}

SELECT *
FROM
  ${ref("6_01_summary_hourly")}
WHERE
  time_window >=  TIMESTAMP_SUB(CURRENT_TIMESTAMP(), INTERVAL ${dataform.projectConfig.vars.report_interval_days} DAY)
  AND (
    numDestIps > 10 OR numDestPorts > 10
  )
ORDER BY
   time_window DESC